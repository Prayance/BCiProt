<Window x:Class="BCiProt.ProfileTab"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BCiProt"
        xmlns:ViewModel="clr-namespace:BCiProt.Model"
        xmlns:localEnum="clr-namespace:BCiProt.DataModel"
        xmlns:extToolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="BCi Transcoder - Profile Selection"  Height="500" Width="700"
        Icon="Images/1444317552_App_Services_copy_Amazon_Elastic_Transcoder.ico" Closing="Window_Closing">
        <Window.Resources>
            <ViewModel:ViewModel x:Key="ViewModel"/>
        </Window.Resources>
    <DockPanel>
        <!-- Main tool bar at the top -->
        <!-- All the options will slowly be modified -->
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Menu VerticalAlignment="Center">
                    <MenuItem  x:Name="FileButton" 
                               Background="Transparent"
                               Click="FileButton_Click">
                        <MenuItem.Icon>
                            <Image Source="/Images/1444326032_icon-95-folder.png"  
                                   Height="24"
                                   Width="24"/>
                        </MenuItem.Icon>
                        <MenuItem.Header>
                            <StackPanel Orientation="Vertical" Margin="3,0,0,0">
                                <TextBlock Text="File" FontSize="15"/>
                                <Image Source="/Images/1445441274_icon-arrow-down-b.png" 
                                       VerticalAlignment="Bottom" 
                                       Height="10" 
                                       Margin="3,0,0,0"/>
                            </StackPanel>
                        </MenuItem.Header>
                        <MenuItem.ContextMenu>
                            <ContextMenu >
                                <MenuItem Header="New Profile"></MenuItem>
                                <MenuItem Header="Open Profile"></MenuItem>
                                <MenuItem Header="Commit"
                                          x:Name="Commit">
                                    <MenuItem.Icon>
                                        <Image Source="/Images/1445440879_document-save.png"  Height="24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Export Profile As" x:Name="ExportProfileXml">
                                    <MenuItem.Icon>
                                        <Image Source="/Images/1446042610_download.png"  Height="24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </MenuItem.ContextMenu>
                    </MenuItem>
                </Menu>
            </ToolBar>
            <ToolBar>
                <Button Click="Button_Click_7"
                        ToolTip="Load a Saved Profile."
                        ToolBar.OverflowMode="AsNeeded">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Images/1445632210_ark2.png" Height="24" Width="24" />
                        <TextBlock Margin="3,0,0,0">Load</TextBlock>
                    </StackPanel>
                </Button>
                <Separator />
                <Button x:Name="SaveDataProfileXml" 
                        Click="SaveDataProfileXml_Click"
                        ToolTip="Click to Save Data Profile as Xml">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Images/1445977162_floppy-disk.png" Height="24" Width="24" />
                        <TextBlock Margin="3,0,0,0">Save as Xml</TextBlock>
                    </StackPanel>
                </Button>
                <Button x:Name="SaveDataProfile" 
                        Click="SaveDataProfile_Click"
                        ToolTip="Click to Save to an existing Data Profile">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Images/1446042683_save_add.png" Height="24" Width="24" />
                        <TextBlock Margin="3,0,0,0">Save Profile</TextBlock>
                    </StackPanel>
                </Button>
            </ToolBar>
            <ToolBar>
                <Button Click="Button_Click"
                        ToolTip="Go Back to Main Window"
                        ToolBar.OverflowMode="AsNeeded">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Images/1445019496_back.png" Height="24" Width="24" />
                        <TextBlock Margin="3,0,0,0">Go Back</TextBlock>
                    </StackPanel>
                </Button>
                <Button 
                        ToolTip="Clear the current tab screen."
                        ToolBar.OverflowMode="AsNeeded">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Images/1445440702_edit-clear.png" Height="24" Width="24" />
                        <TextBlock Margin="3,0,0,0">Clear</TextBlock>
                    </StackPanel>
                </Button>
                <Button Click="Button_Click_8"
                    ToolBar.OverflowMode="AsNeeded" 
                    ToolTip="Click to reset all the profile settings.">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Images/1445440764_POWER - RESTART.png" Height="24" Width="24" />
                        <TextBlock Margin="3,0,0,0">Reset</TextBlock>
                    </StackPanel>
                </Button>
            </ToolBar>
            <ToolBar>
                <Button x:Name="helpBut" 
                        Click="helpBut_Click" 
                        ToolTip="Click to view the help documents">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Images/1445026218_help-questionmark.png" Height="24" Width="24" />
                        <TextBlock Margin="3,0,0,0">Help</TextBlock>
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <!-- This will be my sidebar with extra options -->
        <ToolBarTray DockPanel.Dock="Left" Orientation="Vertical">
            <ToolBar>
                <Button ToolTip="Go to Youtube downloader">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Images/1444325688_icon-32-clipboard-edit.png" Height="24" Width="24" />
                        <TextBlock FontSize="6" Margin="0,0,0,0">Youtube</TextBlock>
                    </StackPanel>
                </Button>
                <Button ToolTip="Go to our page on Facebook">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Images/1444326007_icon-70-document-code.png"  Height="24" Width="24"/>
                        <TextBlock FontSize="6" Margin="0,0,0,0">Facebook</TextBlock>
                    </StackPanel>
                </Button>
                <Button ToolTip="Go to do something else on Tweeter.">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Images/1444328473_05-myhouse.png" Height="24" Width="24"/>
                        <TextBlock FontSize="6" Margin="0,0,0,0">Tweeter</TextBlock>
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <!-- Status Bar - at the bottom -->
        <StatusBar DockPanel.Dock="Bottom" Height="24">
            <!-- the grid of the items on the status bar -->
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Name="MyDate" Text="{Binding Source={x:Static sys:DateTime.Now}, Mode = OneWay, StringFormat='{}{0:dddd d MMM yyyy}'}"/>
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem Grid.Column="2">
                <TextBlock x:Name="locationTextBlock" Text="Setup Profiles Tab"/>
            </StatusBarItem>
            <Separator Grid.Column="3" />
            <StatusBarItem Grid.Column="4">
                <TextBlock Text=" You have to fill in all the options that are marked with a star."/>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Grid -->
        <Grid>
            <ScrollViewer  HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Auto">
                <TabControl Margin="14,14,9.8,10.2" x:Name="myTab"
                    BorderBrush="Gainsboro" Resources="{ StaticResource TabContr}">
                    <!-- GENERAL PROFILE TAB -->
                    <TabItem Header="General Profile Settings" x:Name="general" Height="20" VerticalAlignment="Bottom" >
                        <StackPanel Orientation="Vertical" Margin="6,6,6,6">
                            <Border Style="{StaticResource labelBorder}">
                                <Label x:Name="GeneralSubtitle" 
                                   HorizontalAlignment="Center"
                                   Content="This is the subtitle. e.g. General Profile edited Screen Text to be decided." 
                                   FontSize="10"/>
                            </Border>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Profile Name:" Margin="6,6,6,6"/>
                                        <TextBox x:Name="prName"
                                                 ToolTipService.ToolTip="Enter the data bit rate"
                                                 FontSize="12"
                                                 Margin="6,6,6,6"
                                                 Width="100"/>
                                        <Label Content="*" FontSize="14" Margin="0,6,6,0" Foreground="Red"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Profile Version:" Margin="6,6,6,6"/>
                                        <TextBox x:Name="prVersion"
                                                 ToolTipService.ToolTip="Enter the data bit rate"
                                                 FontSize="12"
                                                 Margin="6,6,6,6"
                                                 Width="100"/>
                                        <Label Content="*" FontSize="14" Margin="0,6,6,0" Foreground="Red"/>
                                    </StackPanel>
                                    <CheckBox x:Name="selectVideoEnabled" 
                                              Margin="6,13,12,6" 
                                              Checked="selectVideoEnabled_Checked"
                                              Unchecked="selectVideoEnabled_Unchecked"
                                              HorizontalAlignment="Right">
                                        <TextBlock 
                                             ToolTipService.ToolTip="Check the box to enable the selection of Video.">
                                             Select Video Enabled
                                             <Run Foreground="Red"> * </Run>
                                        </TextBlock>
                                    </CheckBox>
                                </StackPanel>
                                <StackPanel Grid.Column="1" 
                                            Orientation="Vertical">
                                    <CheckBox x:Name="audioPassThrough" 
                                              Checked="audioPassThrough_Checked"
                                              Unchecked="audioPassThrough_Unchecked"
                                              Margin="6,6,6,6">
                                        <TextBlock 
                                             ToolTipService.ToolTip="Check the box to enable Audio Pass Through.">
                                             Audio Pass Through
                                             <Run Foreground="Red"> * </Run>
                                        </TextBlock>
                                    </CheckBox>
                                    <CheckBox x:Name="copyDataFromSource" Margin="6,6,6,6">
                                        <TextBlock 
                                             ToolTipService.ToolTip="Check the box to enable the Copy Data from Source funcitonality.">
                                             Copy Data From Source
                                             <Run Foreground="Red"> * </Run>
                                        </TextBlock>
                                    </CheckBox>
                                    <CheckBox x:Name="overwriteOutput" Margin="6,6,6,6">
                                        <TextBlock 
                                             ToolTipService.ToolTip="Check the box to allow the Overwrite Output.">
                                             Overwrite Output
                                             <Run Foreground="Red"> * </Run>
                                        </TextBlock>
                                    </CheckBox>
                                    <CheckBox x:Name="selectAudioEnabled" 
                                              IsEnabled="True"
                                              Checked="selectAudioEnabled_Checked"
                                              Unchecked="selectAudioEnabled_Unchecked"
                                              Margin="6,6,6,6">
                                        <TextBlock 
                                             ToolTipService.ToolTip="Check the box to enable the Audio selection.">
                                             Select Audio Enabled
                                             <Run Foreground="Red"> * </Run>
                                        </TextBlock>
                                    </CheckBox>
                                </StackPanel>
                                <StackPanel Grid.Column="2"
                                            Orientation="Vertical" HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Checksum Type:"
                                               HorizontalAlignment="Left"
                                               Margin="6,6,6,6"/>
                                        <ComboBox x:Name="checksumType" 
                                                  MinWidth="100"
                                                  Margin="6,6,6,6" 
                                                  ToolTip="Select the type of Type of Checksum.">
                                            <ComboBoxItem Content="none"/>
                                            <ComboBoxItem Content="MD5"/>
                                            <ComboBoxItem Content="SHA"/>
                                            <ComboBoxItem Content="SHA64"/>
                                        </ComboBox>
                                        <Label Content="*" FontSize="14" Margin="0,6,6,0" Visibility="Hidden" Foreground="Red"/>
                                    </StackPanel>
                                    <CheckBox x:Name="metaDataEnabled" Margin="6,6,6,6">
                                        <TextBlock 
                                             ToolTipService.ToolTip="Check the box to enable Metadata.">
                                             Metadata Enable
                                             <Run Foreground="Red"> * </Run>
                                        </TextBlock>
                                    </CheckBox>
                                    <CheckBox x:Name="generateThumbnail" Margin="6,6,6,6">
                                        <TextBlock 
                                             ToolTipService.ToolTip="Check the box to enable the thumbnail generation.">
                                             Generate Thumbnail
                                             <Run Foreground="Red"> * </Run>
                                        </TextBlock>
                                    </CheckBox>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox x:Name="MarkIn" 
                                                  Checked="MarkIn_Checked"
                                                  Unchecked="MarkIn_Unchecked"
                                                  ToolTipService.ToolTip="Click to enable MarkIn." 
                                                  Margin="6,6,6,6" Content="Mark In" />
                                        <CheckBox x:Name="MarkOut" 
                                                  Checked="MarkOut_Checked"
                                                  Unchecked="MarkOut_Unchecked"
                                                  ToolTipService.ToolTip="Click to enable MarkOut." 
                                                  Margin="6,6,6,6" Content="Mark Out" />
                                    </StackPanel>
                                </StackPanel>
                                <!-- Video Filer Panel -->
                                <StackPanel Grid.Row="1" 
                                            Orientation="Vertical" 
                                            x:Name="videoFilterPanel">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Video Filter:" Margin="6,6,6,6"/>
                                        <TextBox x:Name="selectVideoFilter"
                                                 IsEnabled="False"
                                                 ToolTipService.ToolTip="Enter the Video Filter"
                                                 FontSize="12"
                                                 Margin="6,6,6,6"
                                                 Width="100"/>
                                        <Label Content="*" FontSize="14" Margin="0,6,6,0" Visibility="Hidden" Foreground="Red"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Video Filter Type:"
                                               HorizontalAlignment="Left"
                                               Margin="6,6,6,6"/>
                                        <ComboBox x:Name="videoFilter"
                                                  IsEnabled="False"
                                                  MinWidth="100"
                                                  Margin="6,6,6,6" 
                                                  ToolTip="Select the type of Video Filter.">
                                            <ComboBoxItem Content="Picture Size"/>
                                            <ComboBoxItem Content="Frame Rate"/>
                                        </ComboBox>
                                        <Label Content="*" FontSize="14" Margin="0,6,6,0" Visibility="Hidden" Foreground="Red"/>
                                    </StackPanel>
                                    <!-- Mark out Panel 1 -->
                                    <StackPanel Orientation="Horizontal"
                                                x:Name="MarkOutPanel"
                                                Visibility="Hidden"
                                                HorizontalAlignment="Right">
                                        <Label Content="Mark Out Type:" Margin="6,6,6,6"/>
                                        <TextBox x:Name="MarkOutType"
                                                 ToolTipService.ToolTip="Enter the Mark Out Type"
                                                 FontSize="12"
                                                 Margin="6,6,6,6"
                                                 Width="100"/>
                                        <Label Content="*" FontSize="14" Margin="0,6,6,0" Visibility="Hidden" Foreground="Red"/>
                                    </StackPanel>
                                    <!-- Mark out Panel 2 -->
                                    <StackPanel Orientation="Horizontal"
                                                 x:Name="MarkOutPanel2"
                                                 Visibility="Hidden"
                                                 HorizontalAlignment="Right">
                                        <Label Content="Mark Out Frame:" Margin="6,6,6,6"/>
                                        <TextBox x:Name="MarkOutFrame"
                                                 ToolTipService.ToolTip="Enter the Mark Out Frame"
                                                 FontSize="12"
                                                 Margin="6,6,6,6"
                                                 Width="100"/>
                                        <Label Content="*" FontSize="14" Margin="0,6,6,0" Visibility="Hidden" Foreground="Red"/>
                                    </StackPanel>
                                </StackPanel>
                                <!-- Audio Filer Panel -->
                                <StackPanel Grid.Row="1" 
                                            Grid.Column="1"
                                            Orientation="Vertical" 
                                            x:Name="audioFilterPanel">
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Right">
                                        <Label Content="Audio Filter:" Margin="6,6,6,6"/>
                                        <TextBox x:Name="selectAudioFilter"
                                                 IsEnabled="False"
                                                 ToolTipService.ToolTip="Enter the Audio Filter"
                                                 FontSize="12"
                                                 Margin="6,6,6,6"
                                                 Width="100"/>
                                        <Label Content="*" FontSize="14" Margin="0,6,6,0" Visibility="Hidden" Foreground="Red"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Right">
                                        <Label Content="Audio Filter Type:"
                                               HorizontalAlignment="Left"
                                               Margin="6,6,6,6"/>
                                        <ComboBox x:Name="audioFilter"
                                                  IsEnabled="False"
                                                  MinWidth="100"
                                                  Margin="6,6,6,6" 
                                                  ToolTip="Select the type of Audio Filter.">
                                            <ComboBoxItem Content="Language"/>
                                            <ComboBoxItem Content="PID"/>
                                            <ComboBoxItem Content="Layout"/>
                                            <ComboBoxItem Content="Map"/>
                                        </ComboBox>
                                        <Label Content="*" FontSize="14" Margin="0,6,6,0" Visibility="Hidden" Foreground="Red"/>
                                    </StackPanel>
                                    <!-- Mark out panel 3 -->
                                    <StackPanel Orientation="Horizontal" 
                                                x:Name="MarkOutPanel3"
                                                Visibility="Hidden"
                                                HorizontalAlignment="Right">
                                        <Label Content="Mark Out Time:"
                                               MaxHeight="30"
                                               VerticalAlignment="Top"
                                               Margin="6,6,6,6"/>
                                        <extToolkit:MaskedTextBox x:Name="MarkOutTime"
                                                                  Mask="00:00:00:00"
                                                                  FontSize="14"
                                                                  MaxHeight="30"
                                                                  VerticalAlignment="Top"
                                                                  Margin="6,6,6,6"
                                                                  Width="100" 
                                                                  ToolTipService.ToolTip="Please enter the MarkOut time, having format: H:m:s:frames"
                                                                  ValueDataType="{x:Type sys:Int32}" />
                                        <Label Content="*" FontSize="14" Margin="0,6,6,0" Visibility="Hidden" Foreground="Red"/>
                                    </StackPanel>
                                </StackPanel>
                                <!-- Mark In panel -->
                                <StackPanel Grid.Column="2" 
                                            x:Name="MarkInPanel"
                                            Visibility="Hidden"
                                            Grid.Row="1" 
                                            HorizontalAlignment="Right">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Mark In Type:" Margin="6,6,6,6"/>
                                        <TextBox x:Name="MarkInType"
                                                 ToolTipService.ToolTip="Enter the Mark In Type"
                                                 FontSize="12"
                                                 Margin="6,6,6,6"
                                                 Width="100"/>
                                        <Label Content="*" FontSize="14" Margin="0,6,6,0" Visibility="Hidden" Foreground="Red"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Mark In Frame:" Margin="6,6,6,6"/>
                                        <TextBox x:Name="MarkInFrame"
                                                 ToolTipService.ToolTip="Enter the Frame In Type"
                                                 FontSize="12"
                                                 Margin="6,6,6,6"
                                                 Width="100"/>
                                        <Label Content="*" FontSize="14" Margin="0,6,6,0" Visibility="Hidden" Foreground="Red"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Mark In Time:"
                                               HorizontalAlignment="Left"
                                               Margin="6,6,6,6"/>
                                        <extToolkit:MaskedTextBox x:Name="MarkInTime"
                                                              Mask="00:00:00:00"
                                                              FontSize="14"
                                                              Margin="6,6,6,6"
                                                              Width="100" 
                                                              ToolTipService.ToolTip="Please enter the MarkIn time, having format: H:m:s:frames"
                                                              ValueDataType="{x:Type sys:Int32}" />
                                        <Label Content="*" FontSize="14" Margin="0,6,6,0" Visibility="Hidden" Foreground="Red"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </TabItem>
                    <!-- DATA PROFILE TAB -->
                    <TabItem Header="Data Profile" x:Name="data">
                        <StackPanel Orientation="Vertical" Margin="6,6,6,6">
                            <Border Style="{StaticResource labelBorder}">
                                <Label x:Name="DataSubtitle" 
                                   HorizontalAlignment="Center"
                                   Content="This is the subtitle. e.g. Data Profile edited Screen Text to be decided." 
                                   FontSize="10"/>
                            </Border>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <!--treeview panel -->
                                <StackPanel Grid.RowSpan="3" Grid.Column="0">
                                    <TreeView Name="dataTree" 
                                              Width="250" 
                                              Height="300">
                                        <TreeView.Resources>
                                            <HierarchicalDataTemplate DataType="{x:Type ViewModel:TreeModel}" ItemsSource="{Binding Nodes}">
                                                <StackPanel Orientation="Horizontal">
                                                    <!--<Image Source="/WpfTutorialSamples;component/Images/user.png" Margin="0,0,5,0" />-->
                                                    <TextBlock Text="{Binding Type}" FontWeight="Bold" FontSize="14"/>
                                                    <TextBlock Text=" [" Foreground="Blue" />
                                                    <TextBlock Text="{Binding Nodes.Count}" Foreground="Blue" />
                                                    <TextBlock Text="]" Foreground="Blue" />
                                                </StackPanel>
                                            </HierarchicalDataTemplate>
                                            <DataTemplate DataType="{x:Type ViewModel:TreeNode}">
                                                <StackPanel Orientation="Horizontal">
                                                    <!--<Image Source="/WpfTutorialSamples;component/Images/user.png" Margin="0,0,5,0" />-->
                                                    <TextBlock Text="{Binding controlType}" />
                                                    <TextBlock Text=" : " Foreground="Green" />
                                                    <TextBlock Text="{Binding controlValue}" Foreground="Green" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </TreeView.Resources>
                                    </TreeView>
                                </StackPanel>
                                <!-- buttons and data panel -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="6,6,6,6">
                                    <Label Content="Data Codec:" x:Name="DCodecLabel" Margin="6,6,6,6" MaxHeight="30"/>
                                    <ComboBox x:Name="CodecCB" 
                                              DropDownClosed="CodecCB_DropDownClosed"
                                              MaxHeight="30"
                                              Margin="6,6,6,6" 
                                              ToolTip="Select the codec of your data profile."
                                              MinWidth="100"
                                              ItemsSource="{Binding Source={localEnum:EnumBindingSource {x:Type localEnum:Data_Codec}}}"/>
                                    <Label Content="*" FontSize="14" Margin="0,6,6,0" Foreground="Red" MaxHeight="30"/>
                                    <Label Content="Data Bit Rate:" x:Name="DBitLabel" Margin="12,6,6,6" MaxHeight="30"/>
                                    <TextBox x:Name="bitRate"
                                             IsEnabled="False"
                                             MaxHeight="30"
                                             ToolTipService.ToolTip="Enter the data bit rate"
                                             FontSize="12"
                                             Margin="6,6,6,6"
                                             Width="80"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" >
                                    <StackPanel Orientation="Vertical">
                                        <Label x:Name="dataLocation"
                                               Content=""
                                               MinHeight="16"
                                               MinWidth="80"
                                               FontSize="12"
                                               Margin="6,6,6,6"/>
                                        <local:ImageButton ImageHeight="40"
                                                           x:Name="dataLocationButton"
                                                           ImageWidth="30"
                                                           IsEnabled="False"
                                                           Image="/Images/1445439582_data_recovery.png" 
                                                           Margin="6,6,6,6"
                                                           Content ="Data location   "
                                                           Click="dataLocationButton_Click"
                                                           ToolTip="Click to choose your data location."/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <Label x:Name="subtitleLocation"
                                               Content=""
                                               MinWidth="80"
                                               MinHeight="16"
                                               FontSize="12"
                                               Margin="6,6,6,6"/>
                                        <local:ImageButton x:Name="subFileChoose"
                                                           ImageHeight="40"
                                                           ImageWidth="30"
                                                           IsEnabled="False"
                                                           Image="/Images/1445439612_Movies_-_Subtitles.png" 
                                                           Margin="6,6,6,6"
                                                           Content ="Subtitle File Location   "
                                                           Click="subFileChoose_Click"
                                                           ToolTip="Click to choose your subtitle's file location."/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <local:ImageButton ImageHeight="40"
                                                           VerticalAlignment="Bottom"
                                                           IsEnabled="False"
                                                           x:Name="AddPrivateData"
                                                           ImageWidth="30"
                                                           MaxHeight="40"
                                                           Image="/Images/1446043844_data_recovery.png" 
                                                           Margin="6,6,6,6"
                                                           Content ="Add Private Data"
                                                           Click="AddPrivateData_Click"
                                                           ToolTip="Click to save the current subtitle and add a new one."/>
                                        <local:ImageButton ImageHeight="40"
                                                           IsEnabled="False"
                                                           VerticalAlignment="Bottom"
                                                           x:Name="AddSubtitle"
                                                           ImageWidth="30"
                                                           MaxHeight="40"
                                                           Image="/Images/1445893164_add_database.png" 
                                                           Margin="6,6,6,6"
                                                           Content ="    Add Subtitle    "
                                                           Click="AddSubtitle_Click"
                                                           ToolTip="Click to save the current subtitle and add a new one."/>
                                        <local:ImageButton ImageHeight="40"
                                                           VerticalAlignment="Bottom"
                                                           x:Name="cancelData"
                                                           ImageWidth="30"
                                                           MaxHeight="40"
                                                           Image="/Images/1446067213_delete_database.png" 
                                                           Margin="6,6,6,6"
                                                           Content ="        Cancel        "
                                                           Click="cancelData_Click"
