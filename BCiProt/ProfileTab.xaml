               Margin="12,12,12,12"
               Height="Auto"
               Placement="Center" 
               AllowsTransparency="True" 
               PopupAnimation="Fade" 
               Opacity="0.6">
            <Border CornerRadius="6"
                    BorderBrush="Gray"
                    BorderThickness="3"
                    Background="Snow"
                    Margin="12"
                    Padding="6">
                <Border.Effect>
                    <DropShadowEffect Color="Gray"
                      Opacity=".50"
                      ShadowDepth="16" />
                </Border.Effect>
                <StackPanel Orientation="Vertical">
                    <Border Style="{StaticResource labelBorder}">
                        <Label HorizontalAlignment="Center"
                           Background="LightSkyBlue"
                           Content="Save Audio Profile As Other" 
                           FontSize="12"/>
                    </Border>
                    <StackPanel Orientation="Horizontal" 
                            Margin="0,6,0,0"
                            HorizontalAlignment="Left">
                        <Label Content="Name:" 
                           Margin="6,6,6,6"/>
                        <TextBox x:Name="otherName" 
                             ToolTip="Enter the name of your choice for this Audio profile."
                             Width="100" 
                             Margin="6,6,6,6"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                            Margin="0,6,0,0"
                            HorizontalAlignment="Center">
                        <local:ImageButton ImageHeight="24"
                                       Click="otherOK_Click"
                                       ImageWidth="24"
                                       Image="/Images/1447958815_ok.png" 
                                       Margin="6,6,6,6"
                                       x:Name="otherOK"
                                       HorizontalAlignment="Left"
                                       Width="70"
                                       Content ="  OK  "
                                       ToolTipService.ToolTip="Click to save the Audio profile."/>
                        <local:ImageButton ImageHeight="24"
                                       Click="otherCancel_Click"
                                       ImageWidth="24"
                                       Image="/Images/1447958832_cancel.png" 
                                       Margin="6,6,6,6"
                                       x:Name="otherCancel"
                                       HorizontalAlignment="Left"
                                       Width="70"
                                       Content ="Cancel"
                                       ToolTipService.ToolTip="Click to cancel all changes."/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>
    </DockPanel>
</Window>
